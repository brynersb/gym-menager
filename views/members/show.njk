{% extends "layout.njk" %}

{% block content %}

    <div class="card">
        <section class="avatar" style="background: url({{member.avatar_url}}) no-repeat center center/cover"></section>
        <section class="details">
            <h3>Detalhes</h3>

            <div class="item">
                <div>member</div>
                <div>{{member.name}}</div>
            </div>

            <div class="item">
                <div>Email</div>
                <div>{{member.email}}
                </div>
            </div>

            <div class="item">
                <div>Aniversario</div>
                <div>{{member.birth}}
                </div>
            </div>

            <div class="item">
                <div>sexo</div>
                <div>{{"Masculino" if member.gender == "M" else "Feminino"}}</div>
                {# <div>{{member.gender}}</div> #}
            </div>

            <div class="item">
                <div>Tipo Sangu√≠nio</div>
                <div>{{member.blood}}</div>
            </div>

            <div class="item">
                <div>Peso</div>
                <div>{{member.weight}}kg</div>
            </div>

            <div class="item">
                <div>Altura (cm)</div>
                <div>{{member.height}}</div>
            </div>

            <a href="/members/{{member.id}}/edit" class="button">Editar</a>

        </section>
    </div>

{% endblock content %}